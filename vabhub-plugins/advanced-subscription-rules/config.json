{
  "auto_scan": {
    "type": "boolean",
    "default": true,
    "description": "是否自动扫描新内容"
  },
  "max_rules": {
    "type": "number",
    "default": 100,
    "description": "最大规则数量",
    "min": 1,
    "max": 1000
  },
  "log_level": {
    "type": "select",
    "default": "info",
    "options": ["debug", "info", "warning", "error"],
    "description": "日志级别"
  },
  "notification_enabled": {
    "type": "boolean",
    "default": true,
    "description": "是否启用通知"
  }
}