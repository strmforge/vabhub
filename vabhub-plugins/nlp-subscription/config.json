{
  "min_confidence": {
    "type": "number",
    "default": 0.5,
    "description": "最小置信度阈值",
    "min": 0.1,
    "max": 1.0,
    "step": 0.1
  },
  "auto_create_rules": {
    "type": "boolean",
    "default": true,
    "description": "是否自动创建规则"
  },
  "max_history_size": {
    "type": "number",
    "default": 100,
    "description": "最大历史记录数量",
    "min": 10,
    "max": 1000
  },
  "enable_fuzzy_matching": {
    "type": "boolean",
    "default": true,
    "description": "是否启用模糊匹配"
  },
  "language": {
    "type": "select",
    "default": "zh",
    "options": ["zh", "en"],
    "description": "语言设置"
  },
  "debug_mode": {
    "type": "boolean",
    "default": false,
    "description": "调试模式"
  }
}